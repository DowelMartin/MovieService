@model MovieService.Models.Movie

@using Microsoft.AspNetCore.Identity
@using MovieService.Areas.Identity.Data

@inject SignInManager<MovieServiceUser> SignInManager

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <div class="card mb-3" style="max-width: 1000px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Url.Content(Model.Thumbnail)" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <dl class="row">
                        <h1 style="margin-bottom: 30px;">@Html.DisplayFor(model => model.Name)</h1>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ProductionCountries)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ProductionCountries)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Genres)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Genres)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ReleaseDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ReleaseDate)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

</div>
<div>

    
    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
    
    
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="New" asp-controller="Watchlist" asp-route-movieID="@Model.ID">Add to Watchlist</a>
    }
</div>