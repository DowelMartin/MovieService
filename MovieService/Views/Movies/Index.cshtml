@model IEnumerable<MovieService.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Movies</h1>

    <p>
        <a class="btn btn-outline-warning btn-lg btn-block" asp-action="Create">Add movie</a>
    </p>

<hr />
<div class="row">
@foreach (var item in Model) {

    
    <div class="card" style="width: 18rem; margin-right: 10px; margin-top: 10px;">
        <a asp-action="Details" asp-route-id="@item.ID" style="text-decoration: none; color: black;">
            <img src="@Url.Content(item.Thumbnail)" class="card-img-top" height="367px">
            <div class="card-body text-center">
                <h4 class="link">@Html.DisplayFor(modelItem => item.Name)</h4>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Genres)</p>
            </div>
        </a>
    </div>


}
</div>
