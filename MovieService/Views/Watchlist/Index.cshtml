@model List<Watchlist>


<h2>My Watchlists</h2>

@if(Model.Count > 0) { 
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Movie Name</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var watchlist in Model)
            {
            <tr>
                <td>
                    @watchlist.ID
                </td>
                <td>
                    @watchlist.Movie.Name
                </td>
                <td>
                    @watchlist.CreatedDate.ToShortDateString()
                </td>
                <td>
                    <a class="btn btn-outline-danger" asp-action="Remove" asp-controller="Watchlist" asp-route-id="@watchlist.ID">Remove</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
} else { 
    <p class="text-danger"> You have no movies in your watchlist! </p>
}
